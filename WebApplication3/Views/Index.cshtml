@model List<AyuEmlak.Models.Emlak>

@{
    ViewData["Title"] = "AyuEmlak - Anasayfa";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="mb-4">Emlak İlanları</h1>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@item.ResimUrl" class="card-img-top" alt="@item.Baslik" style="height:200px; object-fit:cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Baslik</h5>
                        <p class="card-text text-truncate">@item.Aciklama</p>
                        <p><strong>Fiyat:</strong> @item.Fiyat.ToString("C")</p>
                        <p><strong>Kategori:</strong> @item.Kategori.Ad</p>
                        <p><strong>Adres:</strong> @item.Adres</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
